<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/before_PW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:text = "기존 비밀번호"
        android:fontFamily="@font/custom_font_family"
        android:textSize="14sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_before_PW"
        android:background="@drawable/round_wiget"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/custom_font_family"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/after_PW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp"
        android:text = "새로운 비밀번호"
        android:fontFamily="@font/custom_font_family"
        android:textSize="14sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_after_PW"
        android:background="@drawable/round_wiget"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:fontFamily="@font/custom_font_family"
        android:layout_marginBottom="10dp"/>

</LinearLayout>