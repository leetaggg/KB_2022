<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_wiget">

        <TextView
            android:id="@+id/comment_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/comment_photo"
            android:fontFamily="@font/custom_font_family"
            android:gravity="left"
            android:textColor="#FF333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_username"
            android:layout_alignStart="@+id/comment_username"
            android:layout_alignEnd="@+id/comment_username"
            android:fontFamily="@font/custom_font_family"
            android:gravity="left"
            android:textColor="#FF333333"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@+id/comment_username" />

        <ImageView
            android:id="@+id/comment_photo"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/default_profile" />
    </RelativeLayout>

</RelativeLayout>